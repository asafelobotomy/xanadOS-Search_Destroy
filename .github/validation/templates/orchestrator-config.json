{
  "orchestratorConfig": {
    "version": "1.0.0",
    "description": "Automated Test Orchestrator Configuration for GitHub Copilot Enhancement System",
    "lastUpdated": "2024-12-19"
  },
  "defaultConfiguration": {
    "enabledPhases": [
      "setup",
      "validation",
      "integration",
      "reporting"
    ],
    "parallelExecution": false,
    "timeoutMinutes": 30,
    "retryAttempts": 2,
    "reportFormats": [
      "comprehensive",
      "summary",
      "technical"
    ],
    "notificationLevel": "critical",
    "archiveResults": true,
    "cleanupOnSuccess": false
  },
  "phaseConfigurations": {
    "setup": {
      "enabled": true,
      "critical": true,
      "timeout": 120000,
      "retryAttempts": 1,
      "tasks": [
        "validateProjectStructure",
        "checkDependencies",
        "initializeWorkingDirectories",
        "loadConfigurationFiles",
        "verifySystemResources"
      ]
    },
    "validation": {
      "enabled": true,
      "critical": true,
      "timeout": 300000,
      "retryAttempts": 2,
      "validators": [
        "meta-instruction-validator",
        "template-validation-system"
      ],
      "successThreshold": 60
    },
    "integration": {
      "enabled": true,
      "critical": false,
      "timeout": 600000,
      "retryAttempts": 1,
      "testSuites": [
        "template-structure",
        "content-standards",
        "system-integration"
      ],
      "skipOnValidationFailure": true
    },
    "performance": {
      "enabled": false,
      "critical": false,
      "timeout": 180000,
      "retryAttempts": 1,
      "metrics": [
        "fileProcessingTime",
        "memoryUsage",
        "concurrentProcessing"
      ],
      "thresholds": {
        "maxAverageProcessingTime": 1000,
        "maxMemoryUsageMB": 512
      }
    },
    "reporting": {
      "enabled": true,
      "critical": true,
      "timeout": 120000,
      "retryAttempts": 1,
      "formats": [
        "comprehensive",
        "summary"
      ],
      "includePerformanceData": true,
      "generateDashboard": true
    },
    "cleanup": {
      "enabled": true,
      "critical": false,
      "timeout": 60000,
      "retryAttempts": 0,
      "tasks": [
        "archiveTestResults",
        "cleanTemporaryFiles",
        "updateMetricsDatabase",
        "sendFinalNotifications"
      ]
    }
  },
  "environmentSettings": {
    "nodeVersionRequired": "16.0.0",
    "minimumMemoryMB": 128,
    "requiredDirectories": [
      ".github/chatmodes",
      ".github/prompts",
      ".github/validation",
      ".github/mcp"
    ],
    "requiredFiles": [
      ".github/validation/validators/meta-instruction-validator.js",
      ".github/validation/templates/template-validation-system.js"
    ]
  },
  "validationSettings": {
    "metaInstructionValidator": {
      "enabled": true,
      "configFile": ".github/validation/configs/validation-rules.json",
      "outputFormat": "json",
      "strictMode": false
    },
    "templateValidationSystem": {
      "enabled": true,
      "configFile": ".github/validation/templates/validation-config.json",
      "outputFormat": "json",
      "includePerformanceMetrics": true
    }
  },
  "integrationSettings": {
    "testFramework": {
      "enabled": true,
      "frameworkFile": ".github/validation/templates/integration-test-framework.js",
      "defaultSuites": [
        "template-structure",
        "content-standards",
        "system-integration"
      ],
      "skipPerformanceSuite": false
    },
    "testConfiguration": {
      "maxConcurrentTests": 5,
      "testTimeout": 30000,
      "retryFailedTests": true,
      "generateDetailedResults": true
    }
  },
  "reportingSettings": {
    "reportingSystem": {
      "enabled": true,
      "systemFile": ".github/validation/templates/validation-reporting-system.js",
      "outputDirectory": ".github/validation/reports"
    },
    "reportTypes": {
      "comprehensive": {
        "enabled": true,
        "format": "markdown",
        "includeDetails": true,
        "includeRecommendations": true
      },
      "summary": {
        "enabled": true,
        "format": "markdown",
        "executiveFocus": true,
        "includeMetrics": true
      },
      "technical": {
        "enabled": true,
        "format": "json",
        "includeRawData": true,
        "structuredOutput": true
      },
      "performance": {
        "enabled": false,
        "format": "markdown",
        "includeCharts": false,
        "detailedMetrics": true
      },
      "dashboard": {
        "enabled": true,
        "format": "html",
        "interactive": false,
        "includeCharts": true
      }
    }
  },
  "notificationSettings": {
    "levels": {
      "all": "Send notifications for all events",
      "critical": "Send notifications only for critical events",
      "none": "Disable all notifications"
    },
    "channels": {
      "console": {
        "enabled": true,
        "level": "all"
      },
      "file": {
        "enabled": true,
        "level": "critical",
        "outputFile": ".github/validation/reports/notifications.json"
      },
      "email": {
        "enabled": false,
        "level": "critical",
        "recipients": []
      },
      "slack": {
        "enabled": false,
        "level": "critical",
        "webhook": ""
      }
    }
  },
  "archiveSettings": {
    "enabled": true,
    "archiveDirectory": ".github/validation/reports/archive",
    "retentionDays": 30,
    "compressArchives": false,
    "includeMetrics": true,
    "includeLogs": true
  },
  "performanceSettings": {
    "resourceLimits": {
      "maxMemoryUsageMB": 1024,
      "maxExecutionTimeMinutes": 60,
      "maxConcurrentProcesses": 10
    },
    "optimizations": {
      "enableParallelProcessing": false,
      "cacheValidationResults": true,
      "skipLargeFiles": false,
      "maxFileSizeMB": 10
    }
  },
  "errorHandling": {
    "retryStrategy": {
      "enableRetries": true,
      "maxRetryAttempts": 2,
      "retryDelayMs": 1000,
      "exponentialBackoff": true
    },
    "failureHandling": {
      "stopOnCriticalFailure": true,
      "continueOnNonCriticalFailure": true,
      "generateFailureReports": true,
      "notifyOnFailure": true
    }
  },
  "loggingSettings": {
    "level": "info",
    "outputFile": ".github/validation/reports/orchestrator.log",
    "includeTimestamps": true,
    "includeStackTraces": false,
    "maxLogFileMB": 10,
    "rotateLogFiles": true
  },
  "securitySettings": {
    "allowedExecutables": [
      "node",
      "npm",
      "git"
    ],
    "restrictedPaths": [
      "/etc",
      "/usr/bin",
      "/var"
    ],
    "validateChecksums": false,
    "requireSignedScripts": false
  },
  "customSettings": {
    "githubCopilot": {
      "instructionDirectories": [
        ".github/chatmodes",
        ".github/prompts"
      ],
      "mcpServerDirectory": ".github/mcp/servers",
      "validationRulesDirectory": ".github/validation/configs"
    },
    "qualityStandards": {
      "minimumSuccessRate": 80,
      "maximumErrorRate": 10,
      "warningThreshold": 5,
      "performanceThreshold": 1000
    },
    "cicd": {
      "enableGitHubActions": false,
      "enablePreCommitHooks": false,
      "enableAutomaticReports": true,
      "reportOnPullRequests": false
    }
  },
  "experimentalFeatures": {
    "aiPoweredRecommendations": false,
    "predictiveAnalytics": false,
    "automaticFixSuggestions": false,
    "realTimeMonitoring": false,
    "cloudReporting": false
  },
  "profileConfigurations": {
    "development": {
      "enabledPhases": ["setup", "validation", "reporting"],
      "timeoutMinutes": 10,
      "retryAttempts": 1,
      "notificationLevel": "all",
      "archiveResults": false
    },
    "testing": {
      "enabledPhases": ["setup", "validation", "integration", "reporting"],
      "timeoutMinutes": 20,
      "retryAttempts": 2,
      "notificationLevel": "critical",
      "archiveResults": true
    },
    "production": {
      "enabledPhases": ["setup", "validation", "integration", "performance", "reporting", "cleanup"],
      "timeoutMinutes": 60,
      "retryAttempts": 3,
      "notificationLevel": "critical",
      "archiveResults": true
    },
    "ci": {
      "enabledPhases": ["setup", "validation", "reporting"],
      "timeoutMinutes": 15,
      "retryAttempts": 1,
      "notificationLevel": "critical",
      "archiveResults": false
    }
  }
}
