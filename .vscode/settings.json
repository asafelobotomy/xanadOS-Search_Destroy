{
  "chat.promptFiles": true,
  "chat.commandCenter.enabled": true,
  "chat.experimental.directModelSelection": true,
  "files.associations": {
    "*.chatmode.md": "markdown",
    "*.prompt.md": "markdown",
    "*.instructions.md": "markdown"
  },
  "markdown.validate.enabled": true,
  "markdown.validate.fileLinks.enabled": true,
  "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "markdownlint.config": {
    "default": true,
    "MD013": false,
    "MD033": false,
    "ignores": [
      ".markdown-backups/**",
      "archive/**",
      "node_modules/**"
    ]
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "yaml": true,
    "json": true,
    "javascript": true,
    "scminput": false
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.insertionIndicator": true,
  "cSpell.files": ["**/*.md"],
  "cSpell.useGitignore": true,
  "cSpell.ignorePaths": [
    ".cspellignore",
    ".markdown-backups/**",
    ".python-backups/**",
    "archive/**",
    "node_modules/**"
  ],
  "workbench.editorAssociations": {
    "*.chatmode.md": "vscode.markdown.preview.editor",
    "*.prompt.md": "vscode.markdown.preview.editor",
    "*.instructions.md": "vscode.markdown.preview.editor"
  },
  "files.defaultLanguage": "markdown",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.python-backups/**": true,
    "**/.markdown-backups/**": true,
    "**/archive/**": false,
    "**/__pycache__/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/.python-env/**": true,
    "**/venv/**": true,
    "test_config_fix.py": true,
    "test_cron_integration.py": true,
    "test_improved_status.py": true,
    "test_optimization_direct.py": true,
    "test_optimization_fixes.py": true,
    "test_rkhunter_fix.py": true,
    "test_rkhunter_fixes.py": true,
    "test_rkhunter_status.py": true,
    "CRON_INTEGRATION_SUMMARY.md": true,
    "MODERN_SETUP_SUMMARY.md": true,
    "RKHUNTER_FIX_SUMMARY.md": true,
    ".envrc": true,
    "Makefile.modern": true,
    "fix_setup_config.py": true,
    "docs/guides/MODERN_DEVELOPMENT_SETUP.md": true,
    "releases/v2.13.1.md": true,
    "scripts/tools/test_firewall_optimization_integration.py": true,
    "scripts/tools/validate_firewall_detection_fix.py": true,
    "scripts/tools/version_manager.py": true,
    "scripts/tools/version_manager_new.py": true,
    "app/core/elevated_runner_simple.py": true
  },
  "search.exclude": {
    "**/.python-backups/**": true,
    "**/.markdown-backups/**": true,
    "**/archive/**": false,
    "**/__pycache__/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/.python-env/**": true,
    "**/venv/**": true,
    "dev/node/**": true,
    "dev/performance-analysis/**": true,
    "packaging/**": true
  },
  "python.analysis.exclude": [
    "**/.python-backups/**",
    "**/.markdown-backups/**",
    "archive/**",
    "**/__pycache__/**",
    "**/node_modules/**",
    "**/.venv/**",
    "**/.python-env/**",
    "**/venv/**",
    "dev/node/**",
    "dev/performance-analysis/**",
    "dev/testing/**",
    "dev/debug/**",
    "dev/docs-archive/**",
    "examples/**",
    "packaging/**",
    "releases/**"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.packageIndexDepths": [
    { "name": "", "depth": 2, "includeAllSymbols": false }
  ],
  "python.analysis.userFileIndexingLimit": 2000,
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.importStrategy": "fromEnvironment",
  "ruff.path": [".venv/bin/ruff"],
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/.python-env/**": true,
    "**/venv/**": true,
    "**/.git/**": true,
    "**/archive/**": true,
    "**/dev/node/**": true,
    "**/packaging/**": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "python.analysis.autoSearchPaths": false,
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": false,
  "test.testItemSelectionEnabled": false,
  "testExplorer.showCollapseButton": false,
  "testExplorer.showExpandButton": false,
  "workbench.editor.restoreViewState": false,
  "workbench.editor.enablePreview": false,
  "workbench.startup.editor": "none",
  "files.restoreUndoStack": false
}
