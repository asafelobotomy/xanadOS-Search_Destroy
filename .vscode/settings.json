{
  "chat.promptFiles": true,
  "chat.commandCenter.enabled": true,
  "chat.experimental.directModelSelection": true,
  "files.associations": {
    "*.chatmode.md": "markdown",
    "*.prompt.md": "markdown",
    "*.instructions.md": "markdown"
  },
  "markdown.validate.enabled": true,
  "markdown.validate.fileLinks.enabled": true,
  "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "markdownlint.config": {
    "default": true,
    "MD013": false,
    "MD033": false,
    "ignores": [
      ".markdown-backups/**",
      "archive/**",
      "node_modules/**"
    ]
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "yaml": true,
    "json": true,
    "javascript": true,
    "scminput": false
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.insertionIndicator": true,
  "cSpell.files": ["**/*.md"],
  "cSpell.useGitignore": true,
  "cSpell.ignorePaths": [
    ".cspellignore",
    ".markdown-backups/**",
    ".python-backups/**",
    "archive/**",
    "node_modules/**"
  ],
  "workbench.editorAssociations": {
    "*.chatmode.md": "vscode.markdown.preview.editor",
    "*.prompt.md": "vscode.markdown.preview.editor",
    "*.instructions.md": "vscode.markdown.preview.editor"
  },
  "files.defaultLanguage": "markdown",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true
  ,
  // Exclude backup/archives from Problems and search
  "files.exclude": {
    "**/.python-backups/**": true,
    "**/.markdown-backups/**": true,
    "**/archive/**": false
  },
  "search.exclude": {
    "**/.python-backups/**": true,
    "**/.markdown-backups/**": true,
    "**/archive/**": false
  },
  // Python analysis excludes
  "python.analysis.exclude": [
    "**/.python-backups/**",
    "**/.markdown-backups/**",
    "archive/**"
  ],
  // Ruff extension excludes (if present)
  "ruff.lint.args": [
    "--exclude",
    ".python-backups,.markdown-backups,archive,node_modules,.venv,venv"
  ]
}
