{
  "chat.promptFiles": true,
  "chat.commandCenter.enabled": true,
  "chat.experimental.directModelSelection": true,
  "files.associations": {
    "*.chatmode.md": "markdown",
    "*.prompt.md": "markdown",
    "*.instructions.md": "markdown"
  },
  "markdown.validate.enabled": true,
  "markdown.validate.fileLinks.enabled": true,
  "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "markdownlint.config": {
    "default": true,
    "MD013": false,
    "MD033": false,
    "ignores": [
      ".markdown-backups/**",
      "archive/**",
      "node_modules/**"
    ]
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "yaml": true,
    "json": true,
    "javascript": true,
    "scminput": false
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.insertionIndicator": true,
  "cSpell.files": ["**/*.md"],
  "cSpell.useGitignore": true,
  "cSpell.ignorePaths": [
    ".cspellignore",
    ".markdown-backups/**",
    ".python-backups/**",
    "archive/**",
    "node_modules/**"
  ],
  "workbench.editorAssociations": {
    "*.chatmode.md": "vscode.markdown.preview.editor",
    "*.prompt.md": "vscode.markdown.preview.editor",
    "*.instructions.md": "vscode.markdown.preview.editor"
  },
  "files.defaultLanguage": "markdown",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.python-backups/**": true,
    "**/.markdown-backups/**": true,
    "**/archive/**": false,
    "**/__pycache__/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/.python-env/**": true,
    "**/venv/**": true
  },
  "search.exclude": {
    "**/.python-backups/**": true,
    "**/.markdown-backups/**": true,
    "**/archive/**": false,
    "**/__pycache__/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/.python-env/**": true,
    "**/venv/**": true,
    "dev/node/**": true,
    "dev/performance-analysis/**": true,
    "packaging/**": true
  },
  "python.analysis.exclude": [
    "**/.python-backups/**",
    "**/.markdown-backups/**",
    "archive/**",
    "**/__pycache__/**",
    "**/node_modules/**",
    "**/.venv/**",
    "**/.python-env/**",
    "**/venv/**",
    "dev/node/**",
    "dev/performance-analysis/**",
    "dev/testing/**",
    "dev/debug/**",
    "dev/docs-archive/**",
    "examples/**",
    "packaging/**",
    "releases/**"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.indexing": true,
  "python.analysis.packageIndexDepths": [
    { "name": "", "depth": 2, "includeAllSymbols": false }
  ],
  "python.analysis.userFileIndexingLimit": 2000,
  "ruff.lint.args": [
    "--exclude",
    ".python-backups,.markdown-backups,archive,node_modules,.venv,venv,.python-env,__pycache__"
  ],
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/.python-env/**": true,
    "**/venv/**": true,
    "**/.git/**": true,
    "**/archive/**": true,
    "**/dev/node/**": true,
    "**/packaging/**": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "python.analysis.autoSearchPaths": false,
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  }
}
