[flake8]
max-line-length = 88
# Ignore rules that conflict with Black or are de-prioritized for this project
extend-ignore =
    E203,
    E266,
    E501,
    W503,
exclude =
    .git,
    .tox,
    .venv,
    .mypy_cache,
    build,
    dist,
    node_modules,
    archive,
    logs,
    packaging/icons,
    dev/node
per-file-ignores =
    __init__.py: F401,E402,
    tests/*: F401,F841,E402,
    tests/**: F401,F841,E402,
    dev/**: F401,F841,E402,
    app/main.py: E402,
    tests/test_implementation.py: E402,
    app/core/__init__.py: F401,F403,
