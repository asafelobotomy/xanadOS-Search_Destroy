{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":semanticCommits",
  ":disableRateLimiting",
  "helpers:pinGitHubActionDigests"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    { "matchManagers": ["npm"], "groupName": "npm dependencies" },
    { "matchManagers": ["pip_requirements"], "groupName": "python dependencies" },
    { "matchManagers": ["github-actions"], "groupName": "github actions" }
  ],
  "prCreation": "not-pending",
  "rangeStrategy": "replace",
  "rebaseWhen": "behind-base-branch",
  "schedule": ["every weekday"],
  "enabledManagers": ["npm", "pip_requirements", "github-actions"]
}
